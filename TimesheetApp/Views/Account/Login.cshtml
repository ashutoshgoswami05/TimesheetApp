@model TimesheetApp.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}



    <div class="spinner" id="spinner"  > 
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "LoginForm",@class="commonForm" }))
{
<h2 class="text-center">Login</h2>

@Html.DisplayNameFor(x => x.Employee_Id)

@Html.TextBoxFor(x => x.Employee_Id, new { @class = "form-control" })

@Html.ValidationMessageFor(x => x.Employee_Id,"",new {@class="text-danger" })

<br />

@Html.DisplayNameFor(x => x.Password)

@Html.PasswordFor(x => x.Password, new { @class = "form-control" })

@Html.ValidationMessageFor(x => x.Password,"",new {@class="text-danger" })

<br />

<input  type="submit" id="btn-Login" value="Login" class="btn btn-info btn-submit" />

<br />

@Html.ValidationSummary(true,"",new {@class="text-danger" })

}


