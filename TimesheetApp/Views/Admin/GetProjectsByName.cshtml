@model IEnumerable<TimesheetApp.Models.DisplayProjectsViewModel>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Project Name</th>
                <th scope="col">Client</th>
                <th scope="col">Deadline</th>
                <th scope="col">Project Manager</th>
                <th scope="col">Action</th>


            </tr>
        </thead>
        <tbody >
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Project_Name</td>
                        <td>@item.Client</td>
                        <td>@item.Deadline.Value.ToShortDateString()</td>
                        <td>@item.Manager_Name</td>
                        <td ><button type="button" data-toggle="modal" data-target="#MyModal" data-id="@item.Project_Name" class="EditProject btn btn-info">Edit</button></td>
                    </tr>
                }

            }
            else
            {

                <tr>
                    <td colspan="5">No Projects</td>
                </tr>
            }
        </tbody>
    </table>

<script>
      $('.EditProject').click(function () {
        var dataid = $(this).attr('data-id');
       
        $.ajax({

            url: '@Url.Action("ProjectDetail","Admin")',
            data: { Project_Name: dataid },
            success: function (response) {
              
                $('#modalbody').html(response);
                $('#MyModal').modal("show");
            },
            failure: function () {
                alert('error');
            }




        })
    })

 

</script>
